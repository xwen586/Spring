<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- 客户端使用xfire的spring代理工厂Bean -->  
    <bean id="hello" class="org.codehaus.xfire.spring.remoting.XFireClientFactoryBean">
    	<!-- 请求代理Servlet路径  -->  
        <property name="wsdlDocumentUrl">  
            <value>http://localhost:8080/ch084ws/ws/helloService?wsdl</value>  
        </property>  
        <!-- 接口定义 -->  
        <property name="serviceInterface" value="xfire.client.IHelloClient" />    
    </bean>

</beans>
